{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "f=$(jq -r '.tool_input.file_path // empty') && [[ \"$f\" == *.md ]] && npx markdownlint \"$f\" 2>&1 || true"
          }
        ]
      }
    ]
  }
}
